// schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum AnimeStatus {
  WANT_TO_WATCH
  NOT_INTERESTED
  WATCHING
  COMPLETED 
  PAUSED
  DROPPED
}

model SingleAnimeList {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  
  // NO @unique here!
  jikanId   Int?     
  tvmazeId  Int?     
  
  title     String
  image     String
  status    AnimeStatus @default(WANT_TO_WATCH) 
  updatedAt DateTime @updatedAt
}
